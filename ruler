#!/bin/bash
#
# ShVV 2017-04-02
#

if [ "$1" = "-h" -o "$1" = "h" ]
then
    cat <<HELP
Usage:
	ruler [d]
or
	ruler {h|-h}
HELP
    exit 1
fi

R0="||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||||"
R1="123456789012345678901234567890123456789012345678901234567890123456789012345678"
R2="         1         2         3         4         5         6         7        "

if [ "$1" = "d" ]
then
  echo "$R0"
  echo "$R1"
  echo "$R2"
else
  echo "$R2"
  echo "$R1"
  echo "$R0"
fi

# EoF
